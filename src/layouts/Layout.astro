---
import { ClientRouter } from "astro:transitions";
// Supports weights 400-800
import "@fontsource-variable/baloo-2";
import Menu from "@/components/Menu";
import ItemsMenu from "@/components/ItemsMenu";
import Image from "astro/components/Image.astro";

interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="robots" content="*, index" />
		<meta name="keywords" content="astro, practica de jsx y react" />
		<meta
			name="description"
			content="Pagina para practicar react y peticiones a anime con jsx"
		/>
		<title>Rick and Morty - {title}</title>
		<meta
			name="description"
			content="Rick and Morty pagina para ver informaciÃ³n de sus personajes, episodios, locaciones y mas..."
		/>
		<meta name="author" content="Larry Ceballos" />
		<meta name="theme-color" content="#000000" />
		<meta name="robots" content="index, follow" />
		<ClientRouter />
	</head>
	<body class="bg-gray-700 dark:bg-gray-900">
		<header class="bg-indigo-200/50" role="banner">
			<div
				class="relative flex items-center justify-between px-4 sm:px-8"
			>
				<a href="/"
					><Image
						width="200"
						height="200"
						src="/rick-logo.svg"
						alt="logo de mi pagina web"
						class="max-w-20 sm:min-w-32 sm:my-2 py-4"
						loading="eager"
					/></a
				>
				<h1
					class="sm:py-4 sm:px-6 mx-auto sm:mx-0 text-3xl font-extrabold text-center sm:text-6xl text-white dark:text-slate-50"
				>
					Universo de Rick and Morty
				</h1>
				<Menu transition:persist client:visible />
			</div>
		</header>

		<!-- Menu desplegable -->
		<menu
			class="sm:hidden flex mt-8 sticky top-4 left-0 right-0 z-50 justify-center px-4"
		>
			<nav
				role="navigation"
				class={`shadow-lg p-2 overflow-x-auto items-start bg-gray-800 border border-white/25 rounded-lg justify-center flex w-full *:truncate `}
			>
				<ItemsMenu />
			</nav>
		</menu>
		<main role="main">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		font-family: "Baloo 2 Variable", system-ui;
		color-scheme: dark light;
	}
	*::selection {
		background-color: burlywood;
		color: rgb(111, 117, 204);
	}
</style>
