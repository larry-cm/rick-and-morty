---
import { Icon } from "astro-icon/components";
interface Props {
    id: number;
}
const { id } = Astro.props;
---

<div
    class="text-white bg-slate-500/50 hover:bg-slate-500/80 transition-all p-3 rounded-lg space-y-2"
>
    <div class="flex items-center gap-x-2">
        <i class="w-auto">
            <Icon name="episodios" class="size-[18px] sm:size-5" />
        </i>
        <div
            class="flex items-center justify-start gap-1 w-[90%] overflow-hidden"
        >
            <span class="truncate"> Adivina el nombre </span>
            <div class="">|</div>
            <span>S10E10</span>
        </div>
    </div>
    <div class="flex items-center justify-between space-x-2">
        <a
            href="#ver-mas"
            title="Ver mas sobre los episodios .."
            class="flex items-center py-1.5 px-4 rounded-3xl transition-all hover:shadow-md shadow-slate-800 space-x-2 bg-black/40 hover:bg-sky-400 text-slate-300 hover:text-slate-700 min-w-8 max-w-32 font-medium"
        >
            <i>
                <Icon name="info" class="size-5" />
            </i>
            <span class="text-nowrap truncate"> Ver mas... </span>
        </a>
        <div class="w-fit">
            <input
                type="checkbox"
                name=""
                class="sr-ony peer hidden"
                id={`favoritos-episodios-${id}`}
            />
            <label
                class="peer-checked:*:text-red-500"
                for={`favoritos-episodios-${id}`}
            >
                <span class="sr-only">
                    icono del coraz√≥n para episodios favoritos
                </span>
                <Icon
                    name="corazon"
                    class="text-sky-500 size-5 cursor-pointer"
                />
            </label>
        </div>
    </div>
</div>
