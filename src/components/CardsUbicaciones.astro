---
import { Icon } from "astro-icon/components";

interface Props {
    id: number;
}
const { id } = Astro.props;
---

<div
    class="bg-slate-500/50 hover:bg-slate-500/80 rounded-lg size-full flex flex-col h-fit p-3 relative mt-8"
>
    <picture
        class="-top-9 min-[332px]:left-1/3 max-[332px]:left-[40%] absolute"
    >
        <Icon name="planeta" class="size-14" fill="white" />
    </picture>
    <div class="pt-4 text-center">
        <strong class="font-semibold truncate block text-lg">
            Titulo del planeta
        </strong>
        <span class="font-medium text-sky-400"> Ubicación del planeta </span>
        <a
            class="flex items-center py-1.5 px-4 rounded-3xl transition-all hover:shadow-md shadow-slate-800 space-x-2 bg-black/40 hover:bg-sky-400 text-slate-300 hover:text-slate-700 min-w-8 max-w-32 my-4 mx-auto font-medium"
            href="#saber-mas-locaciones"
            title="saber mas sobre la ubicación"
        >
            <i>
                <Icon name="info" class="size-4" />
            </i>
            <span>Ver mas...</span>
        </a>
        <div class="w-full flex justify-center">
            <input
                type="checkbox"
                name=""
                class="sr-ony peer hidden"
                id={`favoritas-ubicaciones-${id}`}
            />
            <label
                class="peer-checked:*:text-red-500"
                for={`favoritas-ubicaciones-${id}`}
            >
                <span class="sr-only">
                    icono del corazón para ubicaciones favoritos
                </span>
                <Icon
                    name="corazon"
                    class="text-sky-500 size-5 cursor-pointer"
                />
            </label>
        </div>
    </div>
</div>
